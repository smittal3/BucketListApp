<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
  <link rel="stylesheet" href="/styles.css" type="text/css">
	<title>Bucket List</title>
</head>

<body>
  <div class="split left">
    <div class="centered">
      <h3>Bucket List</h3>
      <form action="/addingTask" method="post">
        <label>
          <input id="description" name="description" type="text" required/>
          <div class="label-text">Bucket Item </div>
        </label>
        <label>
          <input type="number" name="completeBy" id="completeBy" min="10" max="100" required/>
          <div class="label-text">Complete By (Age) </div>
        </label>
        <input type="reset" value="Clear" class="button"/>
        <input type="submit" id="submitTask" value="Submit" class="button"/>
      </form>
    </div>
  </div>
  
  <div class="split right">
    <div class="centered">
      <table class="styled-table">
        <thead>
          <tr><th>Image</th><th>Bucket Item</th><th>Complete By</th></tr>
        </thead>
        <tbody>
          <%- data %>
        </tbody>
      </table>

      <form action="/deleteAll" method="post">
        <input type="submit" class="resetButton" value="Reset List"/>
      </form>
    </div>
  </div>
</body>

</html>
